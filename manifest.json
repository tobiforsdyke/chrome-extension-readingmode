{
  "name": "Reading Mode",
  "version": "1.0",
  "description": "Change the background and font for readability and remove images",
  "permissions": ["storage","tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    },
    "default_title": "Reading Mode",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },

  "manifest_version": 2
}
